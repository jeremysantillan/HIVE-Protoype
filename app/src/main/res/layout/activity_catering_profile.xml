<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_catering_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.santillanj.hiveproto.CateringProfile">

    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="213dp"
        android:background="@drawable/catering_pic"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/catering_header"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fab_add_order"
        android:id="@+id/floatingActionButton"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="185dp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/catering_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/nestedScrollView">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView android:layout_height="32dp"
                android:layout_width="32dp"
                android:src="@drawable/home_icon"
                android:id="@+id/imgAddress"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp" />

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtCatering_Address"
                android:textColor="@color/colorPrimary"
                android:text="Buena Hills, Guadalupe, 6000"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imgAddress"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView android:layout_height="32dp"
                android:layout_width="32dp"
                android:src="@drawable/call_icon"
                android:id="@+id/imgContactNum"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imgAddress" />

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtCatering_ContactNum"
                android:textColor="@color/colorPrimary"
                android:text="+632 268 490"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/txtCatering_Address"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imgContactNum"
                android:layout_marginLeft="16dp" />


            <ImageView android:layout_height="32dp"
                android:layout_width="32dp"
                android:src="@drawable/stars"
                android:id="@+id/imgRate"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imgContactNum"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/imageView5"
                android:layout_marginLeft="8dp" />


            <ImageView
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:src="@drawable/stars"
                android:id="@+id/imageView6"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imgContactNum"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/imgRate"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:src="@drawable/stars"
                android:id="@+id/imageView5"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imgContactNum"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/imageView4"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:src="@drawable/stars"
                android:id="@+id/imageView4"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imgContactNum" />

            <View
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp" />

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtGallery"
                android:text="Gallery"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp" />


            <HorizontalScrollView
                android:layout_width="368dp"
                android:layout_height="134dp"
                android:id="@+id/horizontalScrollView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scrollbars="none"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtGallery">

                <android.support.constraint.ConstraintLayout android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <ImageView android:layout_height="wrap_content"
                        android:src="@drawable/cateringpic1"
                        android:id="@+id/imgPic1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="150dp" />

                    <ImageView android:layout_height="wrap_content"
                        android:src="@drawable/cateringpic1"
                        android:id="@+id/imgPic2"
                        app:layout_constraintLeft_toRightOf="@+id/imgPic1"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="150dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp" />

                    <ImageView android:layout_height="wrap_content"
                        android:src="@drawable/cateringpic1"
                        android:id="@+id/imgPic3"
                        app:layout_constraintLeft_toRightOf="@+id/imgPic2"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="150dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp" />



                    </android.support.constraint.ConstraintLayout>
            </HorizontalScrollView>

            <View
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp" />

            <Button android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btnViewPackage"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="VIEW PACKAGES AND DISHES"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />



            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtReviews"
                android:text="Reviews"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/btnViewPackage"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>
